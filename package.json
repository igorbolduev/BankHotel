{
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --config stylelint-config-standard-scss",
    "lint": "npm run editorconfig && npm run stylelint"
  },
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "github:htmlacademy/editorconfig-cli",
    "browser-sync": "^2.29.3",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "sass": "^1.63.6",
    "stylelint": "^15.9.0",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "browserlist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/*.js",
    "source/img/**/*.svg",
    "soirce/sass/**/*.scss"
  ],
  "engines": {
    "node": "^16"
  },
  "type": "module"
}
